{
    "name": "rec-lang",
    "displayName": "Really Easy Config (REC)",
    "publisher": "Joey Meere",
    "description": "Syntax highlighting and intellisense for REC (.rec) config files",
    "version": "0.2.0",
    "icon": "images/rec-icon-128.png",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "rec",
                "aliases": [
                    "REC",
                    "rec"
                ],
                "extensions": [
                    ".rec"
                ],
                "icon": {
                    "light": "images/rec-icon.png",
                    "dark": "images/rec-icon.png"
                },
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rec",
                "scopeName": "source.rec",
                "path": "./syntaxes/rec.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "rec",
                "path": "./snippets/rec.json"
            }
        ],
        "commands": [
            {
                "command": "rec.validateFile",
                "title": "REC: Validate Current File",
                "category": "REC"
            },
            {
                "command": "rec.convertToJson",
                "title": "REC: Convert to JSON",
                "category": "REC"
            }
        ],
        "keybindings": [
            {
                "command": "rec.validateFile",
                "key": "ctrl+shift+v",
                "mac": "cmd+shift+v",
                "when": "editorLangId == rec"
            }
        ],
        "configuration": {
            "title": "REC",
            "properties": {
                "rec.validation.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable automatic REC validation"
                },
                "rec.validation.onSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Validate REC files on save"
                },
                "rec.formatter.indentSize": {
                    "type": "number",
                    "default": 2,
                    "description": "Number of spaces for indentation"
                }
            }
        }
    },
    "activationEvents": [
        "onLanguage:rec"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "^22.13.10",
        "typescript": "^4.9.4"
    }
}