{
    "REC Enum Definition": {
        "prefix": "enum",
        "body": [
            "@enum ${1:Name} {",
            "\t${2:VARIANT1}",
            "\t${3:VARIANT2}",
            "}"
        ],
        "description": "Create a REC enum definition"
    },
    "REC Enum with Struct Variants": {
        "prefix": "enumstruct",
        "body": [
            "@enum ${1:Name} {",
            "\t${2:Variant1} { ${3:field}: ${4:string} }",
            "\t${5:Variant2} { ${6:field}: ${7:int} }",
            "\t${8:Variant3}",
            "}"
        ],
        "description": "Create a REC enum with struct variants"
    },
    "REC Type Definition": {
        "prefix": "type",
        "body": [
            "@type ${1:Name} {",
            "\t${2:field}: ${3:string}",
            "\t${4:field2}?: ${5:int}",
            "}"
        ],
        "description": "Create a REC type definition"
    },
    "REC Server Config": {
        "prefix": "server",
        "body": [
            "server: {",
            "\thost: \"${1:localhost}\"",
            "\tport: ${2:8080}",
            "\tbind_address: socket(\"${3:0.0.0.0}:${2:8080}\")",
            "\tssl_enabled: ${4:false}",
            "}"
        ],
        "description": "Create a server configuration block"
    },
    "REC Database Config": {
        "prefix": "database",
        "body": [
            "database: Database.${1|Postgres,MySQL,Redis,SQLite|} {",
            "\thost: \"${2:localhost}\"",
            "\tport: ${3:5432}",
            "\t${4:database}: \"${5:myapp}\"",
            "}"
        ],
        "description": "Create a database configuration"
    },
    "REC Include": {
        "prefix": "include",
        "body": [
            "#include \"${1:config/common.tac}\""
        ],
        "description": "Include another REC file"
    },
    "REC URL": {
        "prefix": "url",
        "body": [
            "url(\"${1:https://example.com}\")"
        ],
        "description": "Create a URL value"
    },
    "REC Socket": {
        "prefix": "socket",
        "body": [
            "socket(\"${1:127.0.0.1}:${2:8080}\")"
        ],
        "description": "Create a socket address"
    },
    "REC Pubkey": {
        "prefix": "pubkey",
        "body": [
            "pubkey(\"${1:base58_public_key}\")"
        ],
        "description": "Create a Solana public key"
    },
    "REC Array": {
        "prefix": "array",
        "body": [
            "[",
            "\t${1:\"value1\"},",
            "\t${2:\"value2\"}",
            "]"
        ],
        "description": "Create an array"
    },
    "REC Object": {
        "prefix": "object",
        "body": [
            "{",
            "\t${1:key}: ${2:\"value\"}",
            "\t${3:key2}: ${4:123}",
            "}"
        ],
        "description": "Create an object"
    },
    "REC Complete Config": {
        "prefix": "tacconfig",
        "body": [
            "// ${1:Application} Configuration",
            "#include \"config/common.tac\"",
            "",
            "@enum Environment {",
            "\tDEVELOPMENT",
            "\tSTAGING",
            "\tPRODUCTION",
            "}",
            "",
            "@type ServerConfig {",
            "\thost: string",
            "\tport: int",
            "\tenvironment: Environment",
            "}",
            "",
            "{",
            "\tapp_name: \"${1:Application}\"",
            "\tversion: \"${2:1.0.0}\"",
            "\t",
            "\tserver: ServerConfig {",
            "\t\thost: \"${3:localhost}\"",
            "\t\tport: ${4:8080}",
            "\t\tenvironment: Environment.${5|DEVELOPMENT,STAGING,PRODUCTION|}",
            "\t}",
            "}"
        ],
        "description": "Create a complete REC configuration template"
    }
}